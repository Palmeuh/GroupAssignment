@page
@model GroupAssignment.Pages.Administration.ManageRolesModel
@{
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Role
            </th>
            <th>
                Remove?
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>
                    @role.Name
                </td>
                <td>
                    <form asp-page-handler="delete" asp-route-id="@role.Id" method="post">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h4>Add New Role</h4>
<form method="post" asp-page-handler="Create">
    <div class="form-group">
        <label asp-for="NewRole.Name" class="control-label"></label>
        <input asp-for="NewRole.Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
